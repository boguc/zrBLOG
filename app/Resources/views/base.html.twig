<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Strona Główna{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/app/bootstrap/css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/app/css/style.css') }}" />
        <script src="{{ asset('bundles/app/js/jquery-3.1.1.min.js') }}"></script>
        <script src="{{ asset('bundles/app/bootstrap/js/bootstrap.min.js') }}"></script>
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <ul class="nav navbar-nav">
                    <li class="nav-item {% if menu == 1 %}active {% endif %}">
                        <a class="nav-link" href="{{ url('blog') }}">Blog</a>
                    </li>
                    <li class="nav-item {% if menu == 2 %}active {% endif %}">
                        <a class="nav-link" href="{{ url('admin') }}">Admin</a>
                    </li>
              </ul>
                <div class="pull-right">
                    {% if app.user %}
                        Zalogowany jako <span class="nav-user-name">{{ app.user }}</span> | <a href="{{ path('fos_user_security_logout') }}">Wyloguj</a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}">Zaloguj</a>
                    {% endif %}
                </div>
            </div>
        </nav>
        <div class="container main-container">
        {% block body %}{% endblock %}
        </div>
    </body>
</html>
